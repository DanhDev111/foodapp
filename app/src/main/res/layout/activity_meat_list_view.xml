<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeatListView"
    android:orientation="vertical"
    android:layout_marginTop="0dp">

    <LinearLayout
        android:id="@+id/linearclickbbq"
        android:layout_width="411dp"
        android:layout_height="140dp"
        android:layout_marginTop="0dp">


        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="128dp"
            android:layout_height="91dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bbq">

        </ImageView>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="Ribs BBQ - Wall Str 11"

                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-9dp"
                android:text="Quantity:"
                android:textColor="#FFA59F9F"
                android:textSize="15dp"

                >

            </TextView>

            <TextView
                android:id="@+id/costProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="19.5$"
                android:textColor="#FD5D5D"

                android:textSize="15dp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:background="@drawable/line_2"
        android:layout_marginTop="0dp"></ImageView>

    <LinearLayout
        android:id="@+id/clickchicken"
        android:layout_width="411dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="128dp"
        android:layout_height="91dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/chickenfried">

    </ImageView>
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fried chicken - Los Angeles"
            android:textSize="15dp"
            android:textColor="@color/black"

            android:layout_marginBottom="9dp"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:layout_marginTop="-9dp"
            android:textColor="#FFA59F9F"
            android:textSize="15dp"

            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0$"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#FD5D5D"
            >

        </TextView>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:background="@drawable/line_2"
        android:layout_marginTop="18dp"></ImageView>

    <LinearLayout
        android:id="@+id/clicksbacon"
        android:layout_width="411dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="128dp"
            android:layout_height="91dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/ssandbacon">

        </ImageView>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sausage and bacon - New York"
                android:textSize="15dp"
                android:textColor="@color/black"

                android:layout_marginBottom="9dp"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:layout_marginTop="-9dp"
                android:textColor="#FFA59F9F"
                android:textSize="15dp"

                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17.5$"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#FD5D5D"
                >

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:background="@drawable/line_2"
        ></ImageView>

