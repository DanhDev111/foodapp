    <GridLayout
        android:layout_width="385dp"
        android:layout_height="350dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="152dp"
                android:layout_height="110dp"
                android:layout_marginTop="19dp"
                app:cardCornerRadius="13dp">

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/meatDish"
                    android:src="@drawable/donuong1"></ImageView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meat dishes"
                android:textAlignment="center"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:orientation="vertical"
            android:layout_marginLeft="38dp">


            <androidx.cardview.widget.CardView
                android:layout_width="152dp"
                android:layout_height="110dp"
                android:layout_marginTop="19dp"
                app:cardCornerRadius="13dp"
                >

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="110dp"
                    android:id="@+id/soupDish"
                    android:scaleType="centerCrop"
                    android:src="@drawable/monan"></ImageView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soup"
                android:textAlignment="center"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="152dp"
                android:layout_height="110dp"
                android:layout_marginTop="19dp"
                app:cardCornerRadius="13dp">

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/dessert"
                    android:src="@drawable/dessrt"></ImageView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dessert"
                android:textAlignment="center"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:orientation="vertical"
            android:layout_marginLeft="38dp">
            <androidx.cardview.widget.CardView
                android:layout_width="152dp"
                android:layout_height="110dp"
                android:layout_marginTop="19dp"
                app:cardCornerRadius="13dp"
                >
                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="110dp"
                    android:id="@+id/saladDish"
                    android:scaleType="centerCrop"
                    android:src="@drawable/salad"></ImageView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salad"
                android:textAlignment="center"
                android:layout_gravity="center"></TextView>
        </LinearLayout>

    </GridLayout>
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line_2"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="53dp"

            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rectangbottombar"

            >


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/iconshome62"></ImageView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/icons8messages62" />

            <ImageView
                android:id="@+id/addToCartBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/icons8shoppingcart62" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/iconsmaleuser62" /><ImageView
            android:id="@+id/manageproduct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"

            app:srcCompat="@drawable/iconsettings53" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>