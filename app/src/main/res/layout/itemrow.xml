                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="19.5$"
                android:textColor="#FD5D5D"

                android:textSize="15dp">

            </TextView>
        </LinearLayout>

    </LinearLayout>
